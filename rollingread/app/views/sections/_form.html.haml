= form_for @section do |f|
  - if @section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :chapter_number
    = f.number_field :chapter_number
  .field
    = f.label :details
    = f.text_area :details
  .field
    = f.label :read_by
    = f.text_field :read_by
  .field
    = f.label :source_id
    = f.number_field :source_id
  .actions
    = f.submit 'Save'
