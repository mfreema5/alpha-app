= form_for @source do |f|
  - if @source.errors.any?
    #error_explanation
      %h2= "#{pluralize(@source.errors.count, "error")} prohibited this source from being saved:"
      %ul
        - @source.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :short_title
    = f.text_field :short_title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :dummy
    = f.check_box :dummy
  .field
    = f.label :course
    = f.text_field :course
  .actions
    = f.submit 'Save'
