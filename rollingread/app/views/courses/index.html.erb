<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course number</th>
      <th>Short title</th>
      <th>Description</th>
      <th>Meet day1</th>
      <th>Meet day2</th>
      <th>Meet day3</th>
      <th>Meet day4</th>
      <th>Meet day5</th>
      <th>Meet day6</th>
      <th>Meet day7</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_number %></td>
        <td><%= course.short_title %></td>
        <td><%= course.description %></td>
        <td><%= course.meet_day1 %></td>
        <td><%= course.meet_day2 %></td>
        <td><%= course.meet_day3 %></td>
        <td><%= course.meet_day4 %></td>
        <td><%= course.meet_day5 %></td>
        <td><%= course.meet_day6 %></td>
        <td><%= course.meet_day7 %></td>
        <td><%= course.semester_id %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

